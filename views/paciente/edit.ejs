<%- include ../layouts/header.ejs %>    
        
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
 
<form action="/pacientes/edit/<%= id %>" method="post" name="form1">
    <table width="25%" border="0">
        <tr> 
            <td>Name da Crianca</td>
            <td><input type="text" name="nome_crianca" id="nome_crianca" value="<%= nome_crianca %>" /></td>
        </tr>
        <tr> 
            <td>Name dos Pais</td>
            <td><input type="text" name="nome_pais" id="nome_pais" value="<%= nome_pais %>" /></td>
        </tr>
        <tr> 
            <td>Sexo</td>
            <td><input type="text" name="sexo" id="sexo" value="<%= sexo %>" /></td>
        </tr>
        <tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Edit" /></td>
        </tr>
    </table>
    <input type="hidden" name="_method" value="PUT" />
</form>
 
